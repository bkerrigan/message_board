<table>
  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td>
        <%= link_to(post) do %>
          <%= post.title %>
          <br />
          Posted <%= post.created_at %> by <%= post.name %>
        <% end %>
      </td>
      <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
</table>

