<table>
  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to image_tag("edit-icon.png"), edit_post_path(post) %></td>
      <td>
        <%= link_to(post) do %>
          <b><%= post.title %></b>
          <br />
          Posted <%= post.created_at.localtime.strftime("%B, %d %Y @ %I:%M %p")  %> by <%= post.name %>
        <% end %>
      </td>
      <td><%= link_to image_tag("delete-icon.png"), post, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
</table>

